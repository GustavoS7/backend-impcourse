{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "paths": {
      "@/infrastructure/*": [
        "infrastructure/*"
      ],
      "@/presentation/*": [
        "presentation/*"
      ],
      "@/domain/*": [
        "domain/*"
      ],
      "@/application/*": [
        "application/*"
      ],
      "@/main/*": [
        "main/*"
      ],
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests"
  ],
}
